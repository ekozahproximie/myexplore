<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        
        android:orientation="horizontal" >
         <ToggleButton
            android:id="@+id/callbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
          	android:background="@drawable/call_button"
            android:contentDescription="@string/no"
            android:onClick="onClick"
            android:textOff=""
            android:textOn=""
            android:visibility="gone"/>
        <ToggleButton
            android:id="@+id/predrawnclearlock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
          android:background="@android:drawable/btn_default"
            android:contentDescription="@string/no"
            android:onClick="onClick"
            android:textOff="@string/pre_drawn_complete"
            android:textOn="@string/predrawn_clear"
            android:visibility="gone" />
  
        <ImageView
            android:id="@+id/videoic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/btn_webcamera"
            android:contentDescription="@string/no"
            android:onClick="onClick" />

        <ImageView
            android:id="@+id/graphic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            
            android:background="@drawable/btn_barchart"
            android:contentDescription="@string/no"
            android:onClick="onClick" />

        <ImageView
            android:id="@+id/monitoric"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/btn_monitor"
            android:contentDescription="@string/no"
            android:onClick="onClick" />

        <Button
            android:id="@+id/setting_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/button_setting_page"
            android:contentDescription="@string/no"
            android:onClick="onClick" />
    </LinearLayout>

</RelativeLayout>