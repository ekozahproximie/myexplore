<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ImageView01"
        android:layout_width="150dip"
        android:layout_height="150dip"
        android:orientation="horizontal"
        android:layout_gravity="center" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" >

        <Button
            android:id="@+id/circle"
            android:layout_width="85dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Draw Cicle" >
        </Button>

        <Button
            android:id="@+id/antialias"
            android:layout_width="85dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Anti Alias" >
        </Button>

        <Button
            android:id="@+id/shadow"
            android:layout_width="85dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Shadow" >
        </Button>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" >

        <Button
            android:id="@+id/blur1"
            android:layout_width="85dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Blur Effect - 1" >
        </Button>

        <Button
            android:id="@+id/blur2"
            android:layout_width="85dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Blur Effect - 2" >
        </Button>

        <Button
            android:id="@+id/blur3"
            android:layout_width="85dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Blur Effect - 3" >
        </Button>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" >

        <Button
            android:id="@+id/blur4"
            android:layout_width="85dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Blur Effect - 4" >
        </Button>

        <Button
            android:id="@+id/emboss"
            android:layout_width="85dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Emboss" >
        </Button>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" >

        <Button
            android:id="@+id/sweep"
            android:layout_width="85dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Sweep" >
        </Button>

        <Button
            android:id="@+id/linear"
            android:layout_width="85dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Linear" >
        </Button>

        <Button
            android:id="@+id/radial"
            android:layout_width="85dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Radial" >
        </Button>
    </LinearLayout>

</LinearLayout>